<div class="chat-header">
  <div class="room_name_box">hogefuga</div>
  <div class="end_room_btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="message_top">
      <div class="message_user">Tom</div>
      <div class="message_date">2022/12/22(Thu) 16:36:05</div>
    </div>
    <div class="message_bottom">
      <div class="message_content">おはよう</div>
    </div>
  </div>

  <div class="message">
    <div class="message_top">
      <div class="message_user">Sim</div>
      <div class="message_date">2022/12/22(Thu) 17:05:00</div>
    </div>
    <div class="message_bottom">
      <div class="message_content">おはよう！</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>